<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="1000" stylesheets="@themes/DefaultTheme.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
  <children>
      <AnchorPane id="shortcut-icons">
         <children>
            <HBox alignment="CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
               <children>
                  <JFXButton id="#button-download" fx:id="btnNew" text="">
                     <graphic>
                        <Region id="button-download-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnStart" text="">
                     <graphic>
                        <Region id="button-play-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnStop" text="">
                     <graphic>
                        <Region id="button-pause-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnDelete" text="">
                     <graphic>
                        <Region id="button-delete-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnOpenFile" text="">
                     <graphic>
                        <Region id="button-open-region" />
                     </graphic>
                  </JFXButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
               <children>
                  <JFXButton fx:id="btnSearch" text="">
                     <graphic>
                        <Region id="button-search-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnPreferences" text="">
                     <graphic>
                        <Region id="button-setting-region" />
                     </graphic>
                  </JFXButton>
                  <MenuButton id="button-more-menus" mnemonicParsing="false" popupSide="LEFT">
                     <HBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                     <items>
                  <MenuItem fx:id="menuNew" mnemonicParsing="false" text="%ui.new" />
                  <MenuItem fx:id="menuOpenDir" mnemonicParsing="false" text="%ui.openDirectory" />
                  <SeparatorMenuItem id="menu-separator" mnemonicParsing="false" />
                  <MenuItem fx:id="menuStopAll" mnemonicParsing="false" text="%ui.stopAllTask" />
                  <MenuItem fx:id="menuStartAll" mnemonicParsing="false" text="%ui.startAllTask" />
                  <SeparatorMenuItem id="menu-separator" mnemonicParsing="false" />
                  <MenuItem fx:id="menuPreferences" mnemonicParsing="false" text="%ui.preferences" />
                  <SeparatorMenuItem id="menu-separator" mnemonicParsing="false" />
                  <MenuItem fx:id="menuAbout" mnemonicParsing="false" text="%ui.about" />
                  <MenuItem fx:id="menuQuit" mnemonicParsing="false" text="%ui.quit" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="menuDonate" mnemonicParsing="false" text="%ui.donate" />
                     </items>
                  </MenuButton>
               </children>
            </HBox>
         </children>
      </AnchorPane>
  </children>
</VBox>
